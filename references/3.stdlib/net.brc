#[ Network library basic usage

        === Methods ===
.connect(host : str, port : int) : socket   -- connect to host on port
.listen(port : int) : socket                -- listen on port
.send(socket : socket, data : str)          -- send data to socket
.recv(socket : socket) : str                -- receive data from socket
.close(socket : socket)                     -- close socket

        === Properties ===
.host : str     -- host address
.port : int     -- port number
.connected : bool -- connection status

]#

import std.network

var socket : socket = net.connect("localhost", 8080)
net.send(socket, "Hello, world!")

var data : str = net.recv(socket)
net.close(socket)